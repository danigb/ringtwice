<table>
  <tr>
    <th><%=  t(:processor) %></th>
    <th><%=  t(:name) %></th>
    <th><%=  t(:body) %></th>
    <th><%=  t(:reply_to) %></th>
    <th><%=  t(:charset) %></th>
    <th><%=  t(:content_type) %></th>
    <th><%=  t(:mime_version) %></th>
  </tr>

<% mail_templates.each do |mail_template| %>
  <tr>
    <td><%=h mail_template.processor %></td>
    <td><%= link_to mail_template.name, mail_template.path %></td>
    <td><%=h mail_template.body %></td>
    <td><%=h mail_template.reply_to %></td>
    <td><%=h mail_template.charset %></td>
    <td><%=h mail_template.content_type %></td>
    <td><%=h mail_template.mime_version %></td>
    <td><%= link_to 'Edit', mail_template.path(:edit) %></td>
    <td><%= link_to 'Destroy', mail_template.path, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
