<table>
  <thead>
    <tr>
      <th><%= t(:name) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %>
        <%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>