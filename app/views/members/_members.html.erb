<table>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:email) %></th>
  </tr>

<% members.each do |member| %>
  <tr>
    <td><%= link_to member.name, member.path %></td>
    <td><%=h member.email %></td>
    <td><%= link_to 'Edit', member.path(:edit) %></td>
    <td><%= link_to 'Destroy', member.path, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

