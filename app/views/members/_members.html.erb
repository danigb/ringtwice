<table>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:email) %></th>
  </tr>

<% members.each do |member| %>
  <tr>
    <td><%= link_to member.name, [@group.project, @group, @member] %></td>
    <td><%=h member.email %></td>
    <td><%= link_to 'Edit', [@group.project, @group, @member] %></td>
    <td><%= link_to 'Destroy', [@group.project, @group, @member], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

