<% form_for(@gateway, :url => @gateway.path) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :protocol %>
    <%= f.select :protocol, [['SMTP', 'smtp']] %>
  </p>
  <p>
    <%= f.label :host %>
    <%= f.text_field :host %>
  </p>
  <p>
    <%= f.label :port %>
    <%= f.text_field :port %>
  </p>
  <p>
    <%= f.label :user %>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :auth %>
    <%= f.text_field :auth %>
  </p>
  <p>
    <%= f.label :domain %>
    <%= f.text_field :domain %>
  </p>
  <p>
    <%= f.hidden_field :project_id %>
    <%= f.submit t(submit_label(@gateway)) %><%= link_to t(:cancel), @project %>
  </p>
<% end %>

